# API Token to use API
API_TOKEN=make_up_a_token_here

# Discord Bot Configuration
DISCORD_TOKEN=your_discord_token_here
DISCORD_CLIENT_ID=your_client_id_here
DISCORD_CLIENT_SECRET=your_client_secret_here

# Application Configuration
PHX_HOST=localhost
SCHEME=http
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret_or_openssl_rand
# Voice channel behaviour (enable explicitly when desired)
AUTO_JOIN=false

# Basic Auth - Comment these out to disable basic auth
BASIC_AUTH_USERNAME=admin
BASIC_AUTH_PASSWORD=admin

# Docker Configuration
COMPOSE_PROJECT_NAME=soundbored

# Voice Listener Configuration
# Local whisper.cpp for speech-to-text
WHISPER_BIN=/usr/local/bin/whisper
WHISPER_MODEL=base.en
WHISPER_MODELS_DIR=/usr/local/share/whisper

# Clawdbot API for processing voice queries
CLAWDBOT_API_URL=http://localhost:18789/api/chat
CLAWDBOT_API_TOKEN=your_clawdbot_token

# ElevenLabs TTS for voice responses
ELEVENLABS_API_KEY=your_elevenlabs_api_key
ELEVENLABS_VOICE_ID=your_voice_id
